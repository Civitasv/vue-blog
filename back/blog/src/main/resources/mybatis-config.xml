<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 配置别名 -->
    <typeAliases>
        <typeAlias type="com.blog.application.model.Article" alias="Article"/>
        <typeAlias type="com.blog.application.model.Comment" alias="Comment"/>
        <typeAlias type="com.blog.application.model.Label" alias="Label"/>
        <typeAlias type="com.blog.application.model.User" alias="User"/>
    </typeAliases>
    <!-- 配置mapper -->
    <mappers>
        <mapper resource="com/blog/application/mapper/ArticleMapper.xml"/>
        <mapper resource="com/blog/application/mapper/LabelMapper.xml"/>
        <mapper resource="com/blog/application/mapper/CommentMapper.xml"/>

    </mappers>
</configuration>