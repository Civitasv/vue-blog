<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.application.mapper.LabelMapper">
    <!--使用自定义结果集类型-->
    <resultMap type="Label" id="LabelMap">
        <id property="labelID" column="LABEL_ID"/>
        <result property="label" column="LABEL"/>
        <collection property="articles" ofType="Article">
            <id property="articleID" column="ARTICLE_ID"/>
            <result property="publicTime" column="PUBLIC_TIME"/>
            <result property="title" column="TITLE"/>
            <result property="digest" column="DIGEST"/>
            <result property="content" column="CONTENT"/>
            <result property="heat" column="HEAT"/>
            <result property="commendNum" column="COMMEND_NUM"/>
            <result property="readNum" column="READ_NUM"/>
        </collection>
    </resultMap>

    <select id="getAllLabels" resultMap="LabelMap">
        select * from label,article
    </select>

    <select id="getLabelByID" resultMap="LabelMap">
        select * from label,article where label.LABEL_ID = #{labelID}
    </select>
</mapper>